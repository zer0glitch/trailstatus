# LCFTF Trail Status - Apache Configuration

# Enable rewrite engine
RewriteEngine On

# Security: Prevent access to sensitive files
<Files "*.json">
    Require all denied
</Files>

<Files "config.php">
    Require all denied
</Files>

<Files "add_user.php">
    Require all denied
</Files>

<Files "setup.php">
    Require all denied
</Files>

# Security: Prevent directory browsing
Options -Indexes

# Error pages (adjust paths as needed)
ErrorDocument 404 /trailstatus/404.php
